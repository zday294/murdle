<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.zday.murdle.controller.CaseController">
    <VBox alignment="CENTER" maxWidth="400">
        <Label fx:id="titleLabel">
         <padding><Insets bottom="5.0" left="5.0" right="5.0" top="5.0" /></padding>
        </Label>

        <Label fx:id="caseDescriptionLabel">
            <padding><Insets bottom="10.0" top="5.0" /></padding>
        </Label>

        <HBox fx:id="suspectCardsPane" alignment="CENTER">

        </HBox>
        <VBox fx:id="clueListPane" alignment="CENTER_LEFT">
            <Label text="Clues and Evidence"/>
        </VBox>

        <Button onAction="#showHint" text="Hint" />

        <VBox fx:id="solutionInputPane" alignment="CENTER">

        </VBox>

    </VBox>
    <VBox fx:id="notebookPane" alignment="CENTER">


    </VBox>

</HBox>
